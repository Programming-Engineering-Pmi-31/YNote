<UserControl x:Class="YNoreWPF.CustomControls.Note"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YNoreWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150" AllowDrop="True">
    <Grid Name="NoteGrid" Background="Yellow">
        <StackPanel Name="Context" Margin="5,5,5,30">
            <RichTextBox Name="TextBoxElem" Height="Auto" VerticalAlignment="Top" Grid.IsSharedSizeScope="True" Background="{x:Null}" BorderBrush="{x:Null}"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="5">
            <Button Content="V" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="20" Height="20" Margin="0,0,5,0" Background="{x:Null}" Click="Add_CheckBox_On_Click"/>
            <Button Content="+" Width="20" Height="20" Background="{x:Null}" Click="IncrementSelectedText_Click"/>
            <Button Content="-" Width="20" Height="20" Background="{x:Null}"/>
            <Button Content="D" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="20" Height="20" Margin="5,0,0,0" Background="{x:Null}" Click="Delete_Note_On_Click"/>
        </StackPanel>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Change color">
                    <MenuItem Header="Yellow" Click="ChangeColorToYellow_click"/>
                    <MenuItem Header="White" Click="ChangeColorToWhite_click"/>
                    <MenuItem Header="Blue" Click="ChangeColorToBlue_click"/>
                </MenuItem>
                <MenuItem Header="Move to destop" Click="MoveToDesktop_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>
