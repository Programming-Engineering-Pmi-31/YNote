<Window x:Class="YNoreWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YNoreWPF"
        xmlns:customcontrol="clr-namespace:YNoreWPF.CustomControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="371*"/>
        </Grid.ColumnDefinitions>

        <Grid Name="SpaceGrid" Grid.Column="0" Background="Purple">
            <Button Content="User" Height="35" Width="35" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="Button_Click"/>
        </Grid>

        <Grid Name="Notes" Grid.Column="1" Background="BlueViolet">
            <ScrollViewer Name="test">
                <StackPanel Name="NotesStackPanel" Margin="5"/>
            </ScrollViewer>
            <Button Content="+" HorizontalAlignment="Right" Margin="0,0,20,10" VerticalAlignment="Bottom" Width="20" Background="{x:Null}" Click="Add_New_Note"/>
        </Grid>

    </Grid>
</Window>
