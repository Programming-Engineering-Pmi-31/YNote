<Window x:Class="YNoteWPF.PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YNoteWPF.PL"
        xmlns:customcontrol="clr-namespace:YNoteWPF.PL.CustomControls"
        xmlns:addition="clr-namespace:YNoteWPF.PL.Models"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1060" WindowStyle="None" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="{x:Type customcontrol:Note}">
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type customcontrol:Note}">
                        <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>

                            <addition:Resizer Cursor="SizeNWSE" Background="#fff9ed" Width="3" Height="3" BorderBrush="Yellow" Grid.Row="0" Grid.Column="0" ThumbDirection="TopLeft"/>
                            <addition:Resizer Cursor="SizeWE" Background="#fff9ed" Width="3" BorderBrush="Yellow" Grid.Row="1" Grid.Column="0" ThumbDirection="Left"/>
                            <addition:Resizer Cursor="SizeNESW" Background="#fff9ed" Width="3" Height="3" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="0" ThumbDirection="BottomLeft" />
                            <addition:Resizer Cursor="SizeNS" Background="#fff9ed" Height="3" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="1" ThumbDirection="Bottom" />
                            <addition:Resizer Cursor="SizeNWSE" Background="#fff9ed" Width="3" Height="3" Grid.Row="2" Grid.Column="2" ThumbDirection="BottomRight" />
                            <addition:Resizer Cursor="SizeWE" Background="#fff9ed" Width="3" Grid.Row="1" Grid.Column="2" ThumbDirection="Right"/>
                            <addition:Resizer Cursor="SizeNESW" Background="#fff9ed" Width="3" Height="3" Grid.Row="0" Grid.Column="2" ThumbDirection="TopRight"/>
                            <addition:Resizer Cursor="SizeNS" Background="#fff9ed"  Height="3" Grid.Row="0" Grid.Column="1" ThumbDirection="Top"/>

                            <ContentPresenter Grid.Row="1" Grid.Column="1" Content="{TemplateBinding Content}" Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="SpaceGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="40"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="130"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuClose">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="SpaceGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="130"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="40"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="InfoOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="InfoGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0" Value="150"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="InfoClose">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="InfoGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="150"/>
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenInfoGrid">
            <BeginStoryboard Storyboard="{StaticResource InfoOpen}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseInfoGrid">
            <BeginStoryboard Storyboard="{StaticResource InfoClose}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="427*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="371*"/>
        </Grid.ColumnDefinitions>


        <Grid Name="InfoBar" Grid.Row="0" Grid.Column="1" Background="#dbf8ff">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!--Button  Width="Auto" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#002d53" Margin="5,0,5,0" Click="Login_Click">
                    <materialDesign:PackIcon Kind="Login"/>
                </-->
                <Button Width="Auto" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#002d53" Margin="5,0,5,0" Click="Minimized_Click">
                    <materialDesign:PackIcon Kind="WindowMinimize"/>
                </Button>
                <Button Width="Auto" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#002d53" Margin="5,0,5,0" Click="FullScreen_Click">
                    <materialDesign:PackIcon Kind="Fullscreen"/>
                </Button>
                <Button Width="Auto" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#002d53" Margin="5,0,5,0" Click="Exit_Click">
                    <materialDesign:PackIcon Kind="Close"/>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Name="SpaceGrid" Grid.Column="0" Grid.Row="0" Background="#dbf8ff" Grid.RowSpan="2" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="581*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button x:Name="ButtonOpenMenu" HorizontalAlignment="Right" VerticalAlignment="Top" Height="20" Width="20" Foreground="#002d53" Background="{x:Null}" BorderBrush="{x:Null}" Click="ButtonOpenMenu_Click" Margin="0,0,10,0">
                    <materialDesign:PackIcon Kind="Menu" Width="20" Height="20"/>
                </Button>
                <Button x:Name="ButtonCloseMenu" HorizontalAlignment="Right" VerticalAlignment="Top" Height="20" Width="20" Foreground="#002d53" Background="{x:Null}" BorderBrush="{x:Null}" Visibility="Collapsed" Click="ButtonCloseMenu_Click" Margin="0,0,7,0">
                    <materialDesign:PackIcon Kind="Menu" Width="20" Height="20"/>
                </Button>
            </Grid>

            <Grid Grid.Row="1">

                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="10,10,0,0">
                    <materialDesign:PackIcon Kind="User" Width="25" Height="25" Margin="0,0,10,0" Foreground="#002d53" MouseLeftButtonDown="PackIcon_MouseLeftButtonDown"/>
                    <TextBlock x:Name="UserNameTextBlock" Text="User name" VerticalAlignment="Center" Height="25" FontSize="17" Foreground="#002d53"/>
                </StackPanel>
                
                <Grid x:Name="UserInfoGrid" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Hidden">
                    <Rectangle Fill="Aqua" Height="100" Width="100" RadiusX="10" RadiusY="10"/>
                    <Button x:Name="CloseUserInfo" HorizontalAlignment="Right" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Click="CloseUserInfo_Click">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                    <StackPanel Orientation="Vertical">
                        <Label Content="User Info" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="NameLabel" Text="name" Margin="5,0,5,0" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="Surname" Text="Surname" Margin="5,5,5,0" HorizontalAlignment="Center"/>
                        <Button x:Name="ChangeButton" Content="Change" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Click="ChangeButton_Click"/>
                    </StackPanel>
                </Grid>
                
                <ListView Name="SpacesListView" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="SelectionChange_Event">
                    <ListViewItem Height="30">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocument" Width="25" Height="25" Margin="0,0,10,0" Foreground="#002d53"/>
                            <TextBlock Text="Space 1" VerticalAlignment="Center" Height="25" FontSize="17" Foreground="#002d53"/>
                        </StackPanel>
                    </ListViewItem>
                    <!--ListViewItem Height="30"-->
                    <!--StackPanel Orientation="Horizontal"-->
                    <!--materialDesign:PackIcon Kind="FileDocument" Width="25" Height="25" Margin="0,0,10,0" Foreground="#002d53"/-->
                    <!--TextBlock Text="Space 2" VerticalAlignment="Center" Height="25" FontSize="17" Foreground="#002d53"/-->
                    <!--/StackPanel-->
                    <!--ListViewItem/-->
                    <ListViewItem Height="30">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocument" Width="25" Height="25" Margin="0,0,10,0" Foreground="#002d53"/>
                            <TextBlock Text="Add space" VerticalAlignment="Center" Height="25" FontSize="17" Foreground="#002d53"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>

                <Button x:Name="LogOutButton" Height="30" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#002d53" Margin="10,0,0,10" Click="LogOutButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Logout" Height="25" Width="25" Margin="0,0,10,0"/>
                        <TextBlock Text="Log Out" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <Grid Name="Notes" Grid.Column="1" Grid.Row="1" Background="#002d53">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- change width to 0 to hide grid from start or to 150 to show -->
            <Grid x:Name="InfoGrid" HorizontalAlignment="Right" Width="0" Margin="0,60,10,60" Grid.Column="1">
                <Rectangle RadiusX="20" RadiusY="20" Fill="#dbf8ff"/>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15">
                    <TextBox Text="Space Name" FontSize="17" Foreground="#002d53" Background="{x:Null}" BorderBrush="{x:Null}"/>
                    <TextBox Text="Description" Height="Auto" Margin="5" FontSize="15" Foreground="#002d53" Background="{x:Null}" BorderBrush="{x:Null}"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50">
                    <Label Content="User 1" FontSize="17" Foreground="#002d53"/>
                    <Label Content="User 2" FontSize="17" Foreground="#002d53"/>
                    <Label Content="User 3" FontSize="17" Foreground="#002d53"/>
                    <Label Content="User 4" FontSize="17" Foreground="#002d53"/>
                    <Label Content="User 5" FontSize="17" Foreground="#002d53"/>
                    <Label Content="User 6" FontSize="17" Foreground="#002d53"/>
                </StackPanel>
            </Grid>
            <Grid x:Name="ChangesGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Visibility="Hidden">
                <Rectangle Height="150" Width="150" Fill="Aqua" RadiusX="10" RadiusY="10"/>
                
                <StackPanel>
                    <TextBox x:Name="ChangeName" Text="Name" Margin="10,10,10,4"/>
                    <TextBox x:Name="ChangeSurname" Text="Surname" Margin="10,0,10,4"/>
                    <StackPanel Orientation="Vertical">
                        <TextBox x:Name="ChangePassword" Text="New Password" Margin="10,0"/>
                        <TextBox x:Name="ChangeConfirmPassword" Text="Confirm Password" Margin="10,0"/>
                    </StackPanel>
                    <TextBox x:Name="ChangeEmail" Text="New Email" Margin="10,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
                    <Button x:Name="DeleteAccountButton" Content="Delete Acount" Background="Red" Foreground="White" Click="DeleteAccountButton_Click"/>
                    <Button x:Name="SavaChangeButton" Content="Save" Background="{x:Null}" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
            
            <Grid x:Name="GroupGrid">
                <StackPanel x:Name="GroupStackPanel" Orientation="Horizontal">
                    
                </StackPanel>                
            </Grid>
            <Canvas Name="NotesCanvas" Margin="5" Grid.Column ="1">
                <!--customcontrol:Note Height="150" Width="150" /-->
                <!--customcontrol:Group Height="550" Canvas.Left="6" Canvas.Top="10"/-->
            </Canvas>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,10,10" Grid.Column="1">
                <Button  Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Click="Add_New_Note" Grid.Row="1">
                    <materialDesign:PackIcon Kind="Add" Foreground="White" Height="30" Width="30"/>
                </Button>
                <Button x:Name="AddGroup" Height="30" Width="30" Background="{x:Null}" BorderBrush="{x:Null}" Click="Add_Group">
                    <materialDesign:PackIcon Kind="Group" Width="29" Height="29" Foreground="White"/>
                </Button>
                <Button x:Name="ButtonOpenInfoGrid" Height="30" Width="30" Background="{x:Null}" BorderBrush="{x:Null}" Click="ButtonOpenInfoGrid_Click">
                    <materialDesign:PackIcon Kind="Information" Width="29" Height="29" Foreground="White"/>
                </Button>
                <Button x:Name="ButtonCloseInfoGrid" Height="30" Width="30" Visibility="Collapsed" Background="{x:Null}" BorderBrush="{x:Null}" Click="ButtonCloseInfoGridu_Click">
                    <materialDesign:PackIcon Kind="Information" Width="29" Height="29" Foreground="White"/>
                </Button>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
