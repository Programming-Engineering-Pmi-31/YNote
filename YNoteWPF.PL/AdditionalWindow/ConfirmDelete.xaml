<Window x:Class="YNoteWPF.PL.AdditionalWindow.ConfirmDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YNoteWPF.PL.AdditionalWindow"
        mc:Ignorable="d"
        Title="Window1" Height="100" Width="300" WindowStyle="None">
    <Grid>
        <TextBlock Text="Are you sure you want to delete your account?" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20,0,20,20">
            <Button x:Name="deleteAcount" Content="Delete" Height="30" Width="60" Margin="0,0,30,0" Click="Delete_Click"/>
            <Button x:Name="cancelDelete" Content="Cancel" Height="30" Width="60" Click="cancelDelete_Click"/>
        </StackPanel>
    </Grid>
</Window>
